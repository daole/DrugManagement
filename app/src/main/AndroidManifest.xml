<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dreamdigitizers.drugmanagement">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title__app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.implementations.activities.MainActivity"
            android:windowSoftInputMode="stateUnspecified|adjustResize"
            android:label="@string/title__app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
            android:name=".data.MedicineContentProvider"
            android:authorities="com.dreamdigitizers.drugmanagement.contentprovider">
        </provider>
    </application>

</manifest>
