<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root">

    <RelativeLayout
        android:id="@+id/row1"
        style="@style/Row">

        <ImageButton
            android:id="@+id/btnPrevious"
            style="@style/ImageButtonPrevious"/>

        <TextView
            android:id="@+id/lblPrescriptionDate"
            android:layout_centerInParent="true"
            style="@style/TextView"/>

        <ImageButton
            android:id="@+id/btnNext"
            style="@style/ImageButtonNext"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row2"
        android:layout_below="@id/row1"
        style="@style/Row">

        <ListView
            android:id="@+id/lstSchedules"
            style="@style/ListView"/>

        <TextView
            android:id="@+id/lblEmpty"
            style="@style/ListViewEmpty"/>

    </RelativeLayout>

</RelativeLayout>