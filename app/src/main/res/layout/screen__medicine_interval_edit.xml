<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/lblMedicineIntervalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/lbl__medicine_interval_name"/>

        <EditText
            android:id="@+id/txtMedicineIntervalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/lblMedicineIntervalName"
            android:layout_toRightOf="@id/lblMedicineIntervalName"
            android:inputType="text"
            android:hint="@string/hint__medicine_interval_name"/>

        <TextView
            android:id="@+id/lblMedicineIntervalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblMedicineIntervalName"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="@string/lbl__medicine_interval_value"/>

        <EditText
            android:id="@+id/txtMedicineIntervalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtMedicineIntervalName"
            android:layout_alignTop="@id/lblMedicineIntervalValue"
            android:layout_toRightOf="@id/lblMedicineIntervalValue"
            android:inputType="number"
            android:hint="@string/hint__medicine_interval_value"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:minWidth="100dp"
            android:text="@string/btn__back"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnBack"
            android:minWidth="100dp"
            android:text="@string/btn__edit"/>

    </RelativeLayout>

</LinearLayout>