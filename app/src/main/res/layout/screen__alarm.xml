<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root">

    <LinearLayout
        style="@style/RootVerticalCenter">

        <RelativeLayout
            style="@style/RowContentCenter">

            <TextView
                android:id="@+id/lblTime"
                style="@style/TextViewTitle"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/RowContentCenter">

            <TextView
                android:id="@+id/lblFamilyMemberName"
                style="@style/TextViewTitle"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            style="@style/Row">

            <ListView
                android:id="@+id/lstTakenMedicines"
                style="@style/ListViewWrapContentHeight"/>

            <TextView
                android:id="@+id/lblEmpty"
                style="@style/ListViewEmpty"/>

        </LinearLayout>

        <LinearLayout
            style="@style/RowButtons">

            <Button
                android:id="@+id/btnOK"
                style="@style/ButtonOK"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>