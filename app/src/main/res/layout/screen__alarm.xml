<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Root">

        <RelativeLayout
            android:id="@+id/row1"
            style="@style/RowContentCenter">

            <TextView
                android:id="@+id/lblTime"
                style="@style/TextViewTitle"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row2"
            android:layout_below="@id/row1"
            style="@style/RowContentCenter">

            <TextView
                android:id="@+id/lblFamilyMemberName"
                style="@style/TextViewTitle"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:orientation="vertical"
            android:layout_below="@id/row2"
            style="@style/Row">

            <ListView
                android:id="@+id/lstTakenMedicines"
                style="@style/ListViewWrapContentHeight"/>

            <TextView
                android:id="@+id/lblEmpty"
                style="@style/ListViewEmpty"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/row4"
            android:layout_below="@id/row3"
            style="@style/RowContentCenter">

            <Button
                android:id="@+id/btnOK"
                style="@style/ButtonOK"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>