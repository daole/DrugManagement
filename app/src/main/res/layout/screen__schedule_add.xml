<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root">

    <LinearLayout
        style="@style/RootVertical">

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblFamilyMemberName"
                style="@style/TextViewFamilyMemberName"/>

            <Spinner
                android:id="@+id/selFamilyMembers"
                android:layout_toLeftOf="@+id/btnAddFamilyMember"
                android:layout_toRightOf="@id/lblFamilyMemberName"
                style="@style/Spinner"/>

            <ImageButton
                android:id="@id/btnAddFamilyMember"
                style="@style/ImageButtonAdd"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblMedicineName"
                android:layout_centerVertical="false"
                style="@style/TextViewMedicineName"/>

            <ListView
                android:id="@+id/lstMedicines"
                android:layout_below="@id/lblMedicineName"
                android:layout_toRightOf="@id/lblMedicineName"
                style="@style/ListViewInputItem"/>

            <ImageButton
                android:id="@+id/btnSelectMedicine"
                android:layout_alignTop="@id/lblMedicineName"
                style="@style/ImageButtonAdd"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblStartDate"
                style="@style/TextViewStartDate"/>

            <TextView
                android:id="@+id/lblStartDateValue"
                android:layout_toLeftOf="@+id/btnSelectStartDate"
                android:layout_toRightOf="@id/lblStartDate"
                style="@style/TextView"/>

            <ImageButton
                android:id="@id/btnSelectStartDate"
                style="@style/ImageButtonAdd"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblMedicineTimeName"
                style="@style/TextViewMedicineTimeName"/>

            <Spinner
                android:id="@+id/selMedicineTimes"
                android:layout_toLeftOf="@+id/btnAddMedicineTime"
                android:layout_toRightOf="@id/lblMedicineTimeName"
                style="@style/Spinner"/>

            <ImageButton
                android:id="@id/btnAddMedicineTime"
                style="@style/ImageButtonAdd"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblMedicineIntervalName"
                style="@style/TextViewMedicineIntervalName"/>

            <Spinner
                android:id="@+id/selMedicineTimeIntervals"
                android:layout_toLeftOf="@+id/btnAddMedicineInterval"
                android:layout_toRightOf="@id/lblMedicineIntervalName"
                style="@style/Spinner"/>

            <ImageButton
                android:id="@id/btnAddMedicineInterval"
                style="@style/ImageButtonAdd"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblAlarm"
                style="@style/TextViewAlarm"/>

            <Switch
                android:id="@+id/swiAlarm"
                style="@style/Switch"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblTimes"
                style="@style/TextViewTimes"/>

            <EditText
                android:id="@+id/txtTimes"
                android:layout_toRightOf="@id/lblTimes"
                style="@style/EditTextTimes"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblScheduleNote"
                style="@style/TextViewNote"/>

            <EditText
                android:id="@+id/txtScheduleNote"
                android:layout_toRightOf="@id/lblScheduleNote"
                style="@style/EditTextScheduleNote"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/RowButtons">

            <Button
                android:id="@+id/btnBack"
                style="@style/ButtonBack"/>

            <Button
                android:id="@+id/btnAdd"
                android:layout_toRightOf="@id/btnBack"
                style="@style/ButtonAdd"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>