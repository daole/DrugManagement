<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Row">

    <TextView
        android:id="@+id/lblMedicineTimeName"
        style="@style/RowBeginningItem"/>

    <TextView
        android:id="@+id/lblMedicineTimeValue"
        android:layout_toLeftOf="@+id/chkSelect"
        android:layout_toRightOf="@id/lblMedicineTimeName"
        style="@style/RowMiddleItemAlignRight"/>

    <CheckBox
        android:id="@id/chkSelect"
        style="@style/CheckBoxInListView"/>

</RelativeLayout>