<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root">

    <LinearLayout
        style="@style/RootVerticalCenterWithDividers">

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblMedicineTimeName"
                style="@style/TextViewMedicineTimeName"/>

            <EditText
                android:id="@+id/txtMedicineTimeName"
                android:layout_toRightOf="@id/lblMedicineTimeName"
                style="@style/EditTextMedicineTimeName"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/Row">

            <TextView
                android:id="@+id/lblMedicineTimeValue"
                android:layout_centerVertical="false"
                style="@style/TextViewMedicineTimeValue"/>

            <ListView
                android:id="@+id/lstMedicineTimeValues"
                android:layout_below="@id/lblMedicineTimeValue"
                android:layout_toRightOf="@id/lblMedicineTimeValue"
                style="@style/ListViewInputItem"/>

            <ImageButton
                android:id="@+id/btnAddTimeValue"
                android:layout_alignTop="@id/lblMedicineTimeValue"
                style="@style/ImageButtonAdd"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/RowButtons">

            <Button
                android:id="@+id/btnBack"
                style="@style/ButtonBack"/>

            <Button
                android:id="@+id/btnEdit"
                android:layout_toRightOf="@id/btnBack"
                style="@style/ButtonEdit"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>