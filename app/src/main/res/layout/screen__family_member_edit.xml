<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootVerticalCenter">

    <RelativeLayout
        style="@style/Row">

        <TextView
            android:id="@+id/lblFamilyMemberName"
            style="@style/TextViewFamilyMemberName"/>

        <EditText
            android:id="@+id/txtFamilyMemberName"
            android:layout_toRightOf="@id/lblFamilyMemberName"
            style="@style/EditTextFamilyMemberName"/>

    </RelativeLayout>

    <RelativeLayout
        style="@style/RowContentCenter">

        <Button
            android:id="@+id/btnBack"
            style="@style/ButtonBack"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_toRightOf="@id/btnBack"
            style="@style/ButtonEdit"/>

    </RelativeLayout>

</LinearLayout>